<Window x:Class="HashTableApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashTableApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="addBtn" Content="Add" HorizontalAlignment="Left" Margin="231,270,0,0" VerticalAlignment="Top" Width="75" Click="addBtn_Click"/>
        <Button x:Name="removeBtn" Content="Remove" HorizontalAlignment="Left" Margin="399,270,0,0" VerticalAlignment="Top" Width="75" Click="removeBtn_Click"/>
        <Button x:Name="showBtn" Content="ShowAll" HorizontalAlignment="Left" Margin="560,270,0,0" VerticalAlignment="Top" Width="75" Click="showBtn_Click"/>
        <TextBox x:Name="txtKey" HorizontalAlignment="Left" Height="23" Margin="231,163,0,0" TextWrapping="Wrap" Text="Key" VerticalAlignment="Top" Width="421" TextChanged="txtKey_TextChanged"/>
        <TextBox x:Name="txtValue" HorizontalAlignment="Left" Height="23" Margin="231,210,0,0" TextWrapping="Wrap" Text="Value" VerticalAlignment="Top" Width="421" TextChanged="txtValue_TextChanged"/>

    </Grid>
</Window>
